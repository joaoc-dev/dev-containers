{
  "name": "React + Python Fullstack",
  
  // Using docker-compose for dev container + optional databases
  "dockerComposeFile": [
    "docker-compose.yml"
    // Uncomment to add services (see .devcontainer/compose/README.md):
    // ,"../compose/sqlserver.compose.yml"
    // ,"../compose/postgres.compose.yml"
    // ,"../compose/mongo.compose.yml"
    // ,"../compose/redis.compose.yml"
    // ,"../compose/rabbitmq.compose.yml"
  ],
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  
  "features": {
     // Terminal (optional): Zsh + Oh My Zsh + autosuggestions
     "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": false,
      "installOhMyZsh": true,
      "installOhMyZshConfig": true,
      "username": "none"
    },
    "ghcr.io/devcontainers-extra/features/zsh-plugins:0": {
      "plugins": "zsh-autosuggestions",
      "omzPlugins": "https://github.com/zsh-users/zsh-autosuggestions"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    },
    "ghcr.io/devcontainers-extra/features/pnpm:2": {
      "version": "10.28.0"
    },
    "ghcr.io/devcontainers-extra/features/poetry:2": {
      "version": "2.2.1"
    },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "moby": false,
      "dockerDashComposeVersion": "v2"
    },
    "ghcr.io/audacioustux/devcontainers/tilt:1": {}
  },
  "postCreateCommand": "npm install -g commitizen cz-conventional-changelog; echo '{\"path\":\"cz-conventional-changelog\"}' > ~/.czrc",
  // Terminal theme (optional): Oh My Zsh theme (comment out to disable)
  "postStartCommand": "set -e; if [ -f \"$HOME/.zshrc\" ]; then if grep -q '^ZSH_THEME=' \"$HOME/.zshrc\"; then sed -i 's/^ZSH_THEME=.*/ZSH_THEME=\"agnoster\"/' \"$HOME/.zshrc\"; else printf '\\nZSH_THEME=\"agnoster\"\\n' >> \"$HOME/.zshrc\"; fi; fi",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        // JavaScript/TypeScript
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next",
        "yoavbls.pretty-ts-errors",
        
        // React/Frontend
        "bradlc.vscode-tailwindcss",
        "dsznajder.es7-react-js-snippets",
        "pranaygp.vscode-css-peek",
        "vincaslt.highlight-matching-tag",
        "jock.svg",
        
        // Python
        "ms-python.python",
        "ms-python.debugpy",
        "anysphere.cursorpyright",
        
        // Docker
        "ms-azuretools.vscode-docker",
        
        // Documentation & Utilities
        "bierner.markdown-mermaid",
        "yzhang.markdown-all-in-one",
        "mikestead.dotenv",
        "streetsidesoftware.code-spell-checker"
      ]
    }
  }
}
